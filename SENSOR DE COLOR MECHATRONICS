#define S0 4

#define S1 5

#define S2 6

#define S3 7

#define sensorOut 8

int frequency = 0;

int freqR = 0;

int freqG = 0;

int freqB = 0;




void setup() {

  pinMode(S0, OUTPUT);

  pinMode(S1, OUTPUT);

  pinMode(S2, OUTPUT);

  pinMode(S3, OUTPUT);

  pinMode(sensorOut, INPUT);

  pinMode(12,OUTPUT);

  pinMode(13,OUTPUT);

  

  // Setting frequency-scaling to 20%

  digitalWrite(S0,HIGH);

  digitalWrite(S1,LOW);

  

  Serial.begin(9600);

}




void loop() {

  // Setting red filtered photodiodes to be read

  digitalWrite(S2,LOW);

  digitalWrite(S3,LOW);

  // Reading the output frequency

  frequency = pulseIn(sensorOut, LOW);

  //Remaping the value of the frequency to the RGB Model of 0 to 255

  freqR = map(frequency, 10,37,255,0);

  // Printing the value on the serial monitor

  Serial.print("R= ");//printing name

  Serial.print(freqR);//printing RED color frequency

  Serial.print("  ");

  delay(100);




  // Setting Green filtered photodiodes to be read

  digitalWrite(S2,HIGH);

  digitalWrite(S3,HIGH);

  // Reading the output frequency

  frequency = pulseIn(sensorOut, LOW);

  //Remaping the value of the frequency to the RGB Model of 0 to 255

  freqG = map(frequency, 29,66,255,0);

  // Printing the value on the serial monitor

  Serial.print("G= ");//printing name

  Serial.print(freqG);//printing RED color frequency

  Serial.print("  ");

  delay(100);




  // Setting Blue filtered photodiodes to be read

  digitalWrite(S2,LOW);

  digitalWrite(S3,HIGH);

  // Reading the output frequency

  frequency = pulseIn(sensorOut, LOW);

  //Remaping the value of the frequency to the RGB Model of 0 to 255

  freqB = map(frequency, 26,80,255,0);

  // Printing the value on the serial monitor

  Serial.print("B= ");//printing name

  Serial.print(freqB);//printing RED color frequency

  Serial.println("  ");

  delay(100);

  

//blanco

 if ((freqR>200)&&(freqG>260)&&(freqB>250))

       {

             Serial.print("blanco");

             Serial.print("\n");

             digitalWrite(13,HIGH);

             digitalWrite(12,LOW);

//rosa           

        }

       else if ((freqR>170)&&(freqG<160)&&(freqB<250))

        {

             Serial.print("rosa");

             Serial.print("\n");

             digitalWrite(12,HIGH);

             digitalWrite(13,LOW);

//nada             

        }

        else if ((freqR<30)&&(freqG<30)&&(freqB<30))

        {

             Serial.print("nada");

             Serial.print("\n");

             digitalWrite(12,LOW);

             digitalWrite(13,LOW);

             

        }

  

  

}
